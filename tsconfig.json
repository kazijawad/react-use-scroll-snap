{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "jsx": "react-jsx",
        "strict": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "dist"
    },
    "include": ["src"]
}
